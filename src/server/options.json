{
    "env": "dev",
    "project": "frame",
    "nodemailer": {
        "auth": {
            "user": "root",
            "pass": "x"
        },
        "secure": true,
        "host": "smtp.gmail.com",
        "port": 465
    },
    "bunyan": {
        "name": "main",
        "streams": [
            {
                "type": "rotating-file",
                "path": "logs/frame.log",
                "period": "1d",
                "count": 7,
                "name": "file",
                "level": "debug"
            }
        ]
    },
    "influxdb": {
        "host": "localhost",
        "httpport": 8086,
        "udpport": 8088,
        "database": "frame",
        "shellCmd": "/opt/influxdb/influx"
    },
    "sendemails": false,
    "i18n": {
        "locales": ["en"],
        "defaultLocale": "en",
        "directory": "./build/server/i18n"
    },
    "manifest": {
        "plugins": {
            "hapi-bunyan": {
                "logger": "",
                "mergeData": true,
                "includeTags": true,
                "joinTags": ","
            },
            "inert": {},
            "vision": {},
            "lout": {},
            "hapi-auth-basic": {},
            "./plugins/connections": {
                "mongo": {
                    "app": {
                        "url": "mongodb://frameRoot:frameRoot@localhost:27017/frame"
                    }
                }
            },
            "./plugins/auth": {},
            "./plugins/err-handler": {},
            "./plugins/metrics": {},
            "./plugins/app-routes": {
                "prependRoute": "/api",
                "modules": [
                    "contact",
                    "users",
                    "session",
                    "profile",
                    "auth-attempts",
                    "notifications",
                    "preferences",
                    "user-groups",
                    "blogs",
                    "posts",
                    "audit"
                ]
            }
        },
        "connections": [{
            "port": 8080,
            "labels": ["http"],
            "compression": false
        }, {
            "port": 443,
            "labels": ["secure", "api"],
            "tls": {
                "key": "./build/server/key.pem",
                "cert": "./build/server/cert.pem"
            },
            "compression": false
        }],
        "server": {
            "connections": {
                "routes": {
                    "security": true
                }
            }
        }
    }
}
